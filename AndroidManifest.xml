<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.panicstyle.Moojigae" xmlns:android="http://schemas.android.com/apk/res/android" android:versionName="1.14.0" android:versionCode="23">

    <uses-permission android:name="android.permission.INTERNET"/>
